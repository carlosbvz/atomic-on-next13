{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["next/core-web-vitals", "google", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint"],
  "rules": {
    "require-jsdoc": "off",
    "spaced-comment": "off",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "valid-jsdoc": "off",
    "import/no-relative-parent-imports": "off"
  },
  "overrides": [
    {
      "files": "src/components/atoms/**/*.{js,jsx,ts,tsx}",
      "rules": {
        "import/no-relative-parent-imports": "error"
      }
    }
  ]
}
